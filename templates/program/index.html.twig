{% extends 'base.html.twig' %}

{%block title %}
    All programs
{% endblock %}

{% block body %}
<h1>Toutes les {{ website }} series : </h1>
    {% for program in programs  %}
        <div>
            <h2>{{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.synopsis }}</p>
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>

        </div>

    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>


{% endblock %}



