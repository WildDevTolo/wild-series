{% extends 'base.html.twig' %}

{% block body %}

    <h1>My program : {{ program.title }}</h1>
    <h3>Category : {{program.category.name }}</h3>
    <h4>{{ season.description }} - {{ season.year }}</h4>
    {% for episode in episodes %}
    <ul>
        <a href=" {{ path("program_episode_show", {programId : program.id, seasonId : season.id, episodeId : episode.id}) }}">
        <li>Episode {{ episode.number }} : {{ episode.title }}</li>
        </a>
        <p>Synopsis : {{ episode.synopsis }}</p>
    </ul>
    {% endfor %}

{% endblock %}